
<div class="container-fluid">
    <div class="row" >
        <div class = "col-sm-3 col-md-6 col-md-offset-3">
            <!--<div class = "col-sm-3 col-md-6 col-md-offset-3">-->
            <form action="/admin//users/edit/{{user._id}}" method="post">

                <div class="form-group">
                    <label for="email">Email address:</label>
                    <input type="email" class="form-control"  value={{user.email}} id="email" name="email">{{message}}
                </div>
                <div class="form-group">
                    <label for="pwd">Password:</label>
                    <input type="password" class="form-control" value={{user.password}}id="pwd" name="password">
                </div>

                <div class="form-group">
                    <label for="Role">Role(Admin or User)</label>
                    <input type="text" class="form-control" value={{user.userRole}} id="role" name="role">
                </div>
                <input type="hidden" name="_csrf" value="{{csrfToken}}">
                <button type="submit" class="btn btn-primary">Save</button>
            </form>

        </div>
    </div>
