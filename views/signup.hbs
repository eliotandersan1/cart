<div class = "col-sm-3 col-md-6 col-md-offset-3">
    <h1>{{title}}</h1>
    {{#if hasErrors}}
        <div class="alert alert-danger">
            {{#each messages}}
                <p>{{this}} </p>
            {{/each}}
        </div>
    {{/if}}
    <form action="/user/signup" method="post">

        <div class="form-group">
            <label for="email">Email address:</label>
            <input type="email" class="form-control" id="email" name="email">{{message}}
        </div>
        <div class="form-group">
            <label for="pwd">Password:</label>
            <input type="password" class="form-control" id="pwd" name="password">
        </div>

        <div class="form-group">
        <label for="challengeQuestion">Challenge Question</label>
        <input type="text" class="form-control" id="challengeQuestion" name="challengeQuestion">
        </div>
        <div class="form-group">
        <label for="challengeAnswer">Challenge Answer</label>
        <input type="text" class="form-control" id="challengeAnswer" name="challengeAnswer">
        </div>
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <button type="submit" class="btn btn-primary">Create</button>
    </form>

</div>