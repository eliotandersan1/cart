<!DOCTYPE html>
<html>
<head>
    <title>Page Title</title>
</head>
<body>

<div class="container-fluid">
    <div class="row" >
        <div class = "col-sm-3 col-md-6 col-md-offset-3">
        <!--<div class = "col-sm-3 col-md-6 col-md-offset-3">-->
        <form action="/admin/userRegister" method="post">

            <div class="form-group">
                <label for="email">Email address:</label>
                <input type="email" class="form-control" id="email" name="email">{{message}}
            </div>
            <div class="form-group">
                <label for="pwd">Password:</label>
                <input type="password" class="form-control" id="pwd" name="password">
            </div>

            <div class="form-group">
                <label for="Role">Role(Admin or User)</label>
                <input type="text" class="form-control" id="role" name="role">
            </div>
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <button type="submit" class="btn btn-primary">Create</button>
        </form>

    </div>
    </div>

    <div class="row" >
        <div class = "col-sm-3 col-md-6 col-md-offset-3">
        {{# each user}}
            <table class="table" >
            <div class="sm-col-3 md-col-6">
                {{# each this}}
                    <tr>
                        <th scope="col">user </th>
                        <td>{{this.email}}</td>
                    </tr>
                    <tr>
                        <th scope="col">Role</th>
                        <td>{{this.role}}</td>

                    </tr>
                <tr><td>
                    <form action="/admin/users/delete/{{this._id}}" method="post">
                        <input type="submit" class="btn btn-warning btn-sm" value="Delete" name="delete">
                        <a href="/admin/users/edit/{{this._id}}"  class="btn btn-danger btn-sm">Edit</a>
                    </form>
                </td> </tr>
                </div>
                {{/each}}
            </table>

        {{/each}}
    </div>
    </div>
    </div>
</div>


</body>
</html>
